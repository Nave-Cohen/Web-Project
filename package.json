{
  "name": "Project WEB",
  "version": "1.0.0",
  "decription": "",
  "main": "app.js",
  "author": "Nave-Cohen <nave.cohen@e.braude.ac.il>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build & npm run scss & node app.js",
    "scss": "node-sass --include-path scss public/css/style.scss public/css/style.css",
    "dev": "npm run build && npm run scss && nodemon app.js",
    "lint": "npx eslint .",
    "tests": "mocha --recursive --reporter spec --exit",
    "build": "dotenv -- run-script-os",
    "build:win32": "mysql -h %DB_HOST% -u %DB_USER% -p%DB_PASS% < %INIT_CWD%/configs/init.sql",
    "build:linux": "export MYSQL_PWD=$DB_PASS && mysql -h $DB_HOST -u $DB_USER < $INIT_CWD/configs/init.sql"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "dotenv": "^16.1.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.17.3",
    "mysql2": "^3.3.2",
    "node-sass": "^9.0.0",
    "nodemon": "^2.0.22",
    "virtual-scroll": "^2.2.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chalk": "^4.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "run-script-os": "^1.1.6",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "ext": "ejs,scss,js",
    "events": {
      "restart": "echo Server restarted due to changes"
    }
  }
}
