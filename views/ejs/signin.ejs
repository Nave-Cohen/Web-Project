<form action="/users/signin" method="POST">
    <div class="my-3">
        <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Email/Username">
    </div>
    <div class="mb-3">
        <input type="password" name="password" class="form-control" placeholder="password">
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" name="checkbox" class="form-check-input" id="RememeberCheck">
        <label class="form-check-label" for="RememeberCheck">Remember me</label>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>