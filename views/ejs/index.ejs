<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs',{"title":title}) %>
    <link rel="stylesheet" href="../../public/css/index.css" />
    <link rel="stylesheet" href="../../public/css/task.css" />
    <link rel="stylesheet" href="../../public/css/sidebar.css" />
    <link rel="stylesheet" href="../../public/css/modal.css" />
  </head>

  <body>
    <main>
      <%- include('../partials/sidebar.ejs')%>
      <img
      class="image-title"
      src="../../public/images/<%= title %>-title.png"
      alt="<%= title %> Tasks"
    />
      <div id="content" class="content" style="height: 100%; width: auto">
        <div class="accordion" id="accordion"><%- tasks %></div>
      </div>
      <%- include("../partials/modal.ejs") %>
      <div id="addBtnContainer" class="position-fixed rounded-circle bg-primary shadow" onclick="showModal()">
        <div id="addBtn" class="addBtn">
          <i id="addBtnIcon" class="fa-solid fa-plus fa-xl text-white"></i>
          <div id="addBtnText" class="addBtnText">New Task</div>
        </div>
      </div>
      </div>
    </main>
  </body>
  <script src="../../public/js/sidebar.js"></script>
  <script src="../../public/js/index.js"></script>
  <script src="../../public/js/modal.js"></script>
  <script src="../../public/js/task.js"></script>
</html>
