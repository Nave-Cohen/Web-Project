<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs',{"title":"To-Do App"}) %>
    <link rel="stylesheet" href="../../public/css/index.css" />
  </head>

  <body>
    <main>
      <div class="container-fluid">
        <div class="sidebar close">
          <ul class="list-group">
            <li id="menu-item" class="list-group-item">
              <h2 id="menu-text">Menu</h2>
              <i id="menu-icon" class="fa-solid fa-bars"></i>
            </li>
            <li id="search-item" class="search-item list-group-item">
              <input
                type="text"
                class="form-control"
                id="search-input"
                placeholder="Search task"
              />
            </li>
            <li class="list-item list-group-item" id="today-element">
              <i class="icons fa-regular fa-calendar-check"></i>
              <medium>Today</medium>
              <span class="badge bg-secondary">4</span>
            </li>
            <li class="list-item list-group-item" id="upcoming-element">
              <i class="icons fa-regular fa-calendar"></i>
              <medium>Upcoming</medium>
              <span class="badge bg-secondary">4</span>
            </li>
            <li class="list-item list-group-item" id="done-element">
              <i class="icons fa-solid fa-list-check"></i>
              <medium>Done</medium>
            </li>
          </ul>
        </div>
        <div class="middle">
          <div class="header">
            <h2 id="tasks-header"></h2>
            <button class="add-button">
              <i class="far fa-calendar-plus" style="font-size: 20px"></i
              >&nbsp;&nbsp; New Task
            </button>
          </div>
          <%- tasks %>
        </div>
      </div>
    </main>
  </body>
  <script src="../../public/js/index.js"></script>
</html>
