<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs',{"title":title}) %>
  </head>

  <body>
    <main>
      <img class="image-logo" src="../../public/images/logo.png" />
      <%- include('../partials/sidebar.ejs',user,today,upcoming)%>
      <img
        class="image-title"
        src="../../public/images/<%= title.toLowerCase(); %>-tasks.png"
        alt="<%= title %> Tasks"
      />
      <div class="accordion"><%- tasks %></div>
      <%- include("../partials/modal.ejs") %>
      <i id="addBtn" class="fa-solid fa-plus-circle" onclick="showModal()"></i>
      <div
        class="toast-container position-fixed bottom-0 start-50 translate-middle-x p-3"
      ></div>
      <div id="userModalContent">
        <%- include("../partials/user-modal.ejs") %>
      </div>
    </main>

    <script src="../../public/js/sidebar.js"></script>
    <script src="../../public/js/toast.js"></script>
    <script src="../../public/js/modal.js"></script>
    <script src="../../public/js/user-modal.js"></script>
    <script src="../../public/js/task.js"></script>
    <script src="../../public/js/index.js"></script>
  </body>
</html>
